<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:weightSum="10">


        <TextView
            android:id="@+id/idCommenterTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Name"
            android:textColor="@color/colorGreen"
            android:textSize="20sp"
            android:textStyle="bold|italic"
            android:layout_marginBottom="0dp"
            />
        <TextView
            android:paddingTop="5dp"
            android:id="@+id/idCommenterName"
            android:layout_toRightOf="@id/idCommenterTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Nammsmsm"
            android:textSize="20sp"
            android:textStyle="bold|italic"
            android:layout_marginBottom="0dp"
            />

        <TextView
            android:id="@+id/idCommentTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/idCommenterTitle"
            android:layout_toEndOf="@+id/idCommenterName"
            android:padding="5dp"
            android:paddingTop="5dp"
            android:text="Sun Jul 22 10:45:20 GMT 2018"
            android:textSize="12sp"
            android:textStyle="italic" />
        <TextView
            android:paddingTop="5dp"
            android:id="@+id/idCommenterDesc"
            android:layout_below="@+id/idCommenterName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Tomatat tatoma tta atts stts sbdb  sbshshs bssb"
            android:textSize="20sp"
            android:textStyle="bold|italic"
            android:layout_marginBottom="0dp"
            />

        <ImageView
            android:id="@+id/id_commentEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/idCommentTime"
            android:layout_alignParentTop="true"
            android:layout_marginTop="64dp"
            app:srcCompat="@android:drawable/ic_menu_edit" />


    </RelativeLayout>

</android.support.v7.widget.CardView>