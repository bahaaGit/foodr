<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:weightSum="10">


        <TextView
            android:id="@+id/idCommenterTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Name"
            android:textColor="@color/colorGreen"
            android:textSize="20sp"
            android:textStyle="bold|italic"
            android:layout_marginBottom="0dp"
            />
        <TextView
            android:paddingTop="5dp"
            android:id="@+id/idCommenterName"
            android:layout_toRightOf="@id/idCommenterTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Nammsmsm"
            android:textSize="20sp"
            android:textStyle="bold|italic"
            android:layout_marginBottom="0dp"
            />
        <TextView
            android:paddingTop="5dp"
            android:id="@+id/idCommenterDesc"
            android:layout_below="@+id/idCommenterName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Tomatat tatoma tta atts stts sbdb  sbshshs bssb"
            android:textSize="20sp"
            android:textStyle="bold|italic"
            android:layout_marginBottom="0dp"
            />


    </RelativeLayout>

</android.support.v7.widget.CardView>