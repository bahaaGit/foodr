<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardUseCompatPadding="true">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:weightSum="10">
        <ImageView
            android:id="@+id/idResturantImg"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            android:src="@drawable/topmenubar2"/>

            <TextView
                android:id="@+id/idResturantNameTitle"
                android:layout_below="@+id/idResturantImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Name"
                android:textColor="@color/colorGreen"
                android:textSize="20sp"
                android:textStyle="bold|italic"
                android:layout_marginBottom="0dp"
                />
        <TextView
            android:id="@+id/idResturantName"
            android:layout_below="@+id/idResturantNameTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Nammsmsm"
            android:textSize="20sp"
            android:textStyle="bold|italic"
            android:layout_marginBottom="0dp"
            />
        <TextView
            android:id="@+id/idResturantLocationTitle"
            android:layout_below="@+id/idResturantName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Lacation"
            android:textColor="@color/colorGreen"
            android:textSize="20sp"
            android:textStyle="bold|italic"
            android:layout_marginBottom="0dp"
            />
        <TextView
            android:id="@+id/idResturantLocation"
            android:layout_below="@+id/idResturantLocationTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Westlafayette"
            android:textSize="20sp"
            android:textStyle="bold|italic"
            android:layout_marginBottom="0dp"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>