<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:weightSum="10">

        <ImageView
            android:id="@+id/idOResturantImg"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            android:src="@drawable/topmenubar2" />

        <TextView
            android:id="@+id/idOResturantNameTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/idOResturantImg"
            android:layout_marginBottom="0dp"
            android:padding="5dp"
            android:text="Name"
            android:textColor="@color/colorGreen"
            android:textSize="20sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/idOResturantName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/idOResturantNameTitle"
            android:layout_marginBottom="0dp"
            android:padding="5dp"
            android:text="Nammsmsm"
            android:textSize="20sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/idOResturantLocationTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/idOResturantName"
            android:layout_marginBottom="0dp"
            android:padding="5dp"
            android:text="Lacation"
            android:textColor="@color/colorGreen"
            android:textSize="20sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/idOResturantLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/idOResturantLocationTitle"
            android:layout_marginBottom="0dp"
            android:padding="5dp"
            android:text="Westlafayette"
            android:textSize="20sp"
            android:textStyle="bold|italic" />

        <ImageView
            android:id="@+id/editPen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/idOResturantNameTitle"
            android:layout_marginEnd="99dp"
            android:layout_marginTop="-0dp"
            app:srcCompat="@android:drawable/ic_menu_edit" />

        <ImageView
            android:id="@+id/Remove_Btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/idOResturantNameTitle"
            android:layout_marginEnd="46dp"
            android:layout_marginTop="-0dp"
            app:srcCompat="@android:drawable/ic_menu_delete" />
    </RelativeLayout>

</android.support.v7.widget.CardView>